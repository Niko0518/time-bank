<?xml version="1.0" encoding="utf-8"?>
<!-- [v5.10.0] 屏幕时间通透模式小组件背景 - iOS透明玻璃质感 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 底层极轻透明渐变 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#10FFFFFF"
                android:endColor="#05FFFFFF"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- 顶部高光边框 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- 内部顶部高光 -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#18FFFFFF"
                android:type="linear" />
            <corners android:topLeftRadius="19dp" android:topRightRadius="19dp" />
            <size android:height="2dp" />
        </shape>
    </item>
</layer-list>
